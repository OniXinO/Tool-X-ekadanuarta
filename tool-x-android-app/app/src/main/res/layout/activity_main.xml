<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tool-X Installer"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app will help you install Tool-X on your Android device via Termux"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_check_termux"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step 1: Check if Termux is installed"/>

    <Button
        android:id="@+id/btn_install_tool_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step 2: Install Tool-X"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_launch_tool_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step 3: Launch Tool-X"
        android:layout_marginTop="8dp"/>

</LinearLayout>
